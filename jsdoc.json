{
  "tags": {
    "allowUnknownTags": ["category", "subcategory", "mermaid", "optional"]
  },
  "source": {
    "include": ["./src"],
    "includePattern": "\\.ts$",
    "excludePattern": "(node_modules/|docs/|dist/|start.ts|index.ts)"
  },
  "plugins": [
    "plugins/markdown",
    "jsdoc-mermaid",
    "node_modules/better-docs/category",
    "node_modules/better-docs/typescript"
  ],
  "opts": {
    "encoding": "utf8",
    "destination": "docs/",
    "readme": "README.md",
    "recurse": true,
    "verbose": true,
    "template": "node_modules/better-docs",
    "tutorials": "tutorials/"
  }
}
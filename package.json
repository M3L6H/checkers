{
  "name": "checkers",
  "version": "1.0.0",
  "description": "The goal of this project is to implement a Checkers AI with the minimax algorithm and alpha-beta pruning.",
  "private": true,
  "main": "dist/server/server.js",
  "scripts": {
    "clean": "rm -rf dist/*",
    "build:frontend": "webpack",
    "build:server": "tsc --build tsconfig.server.json",
    "build": "npm run build:frontend && npm run build:server",
    "rebuild": "npm run clean && npm run build",
    "docs": "jsdoc -c jsdoc.json",
    "lint": "tsc --noEmit && eslint '**/*.ts'",
    "watch": "webpack --watch",
    "dev": "webpack serve --open",
    "test": "nyc mocha",
    "start:server": "node .",
    "start": "npm run rebuild && npm run start:server",
    "docker:build": "docker build . -t checkers",
    "docker:run": "docker run --rm -p 80:8080 checkers"
  },
  "keywords": [],
  "author": "Michael Hollingworth",
  "license": "ISC",
  "pre-commit": [
    "lint",
    "test"
  ],
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/chai": "^4.2.14",
    "@types/express": "^4.17.11",
    "@types/jsdom": "^16.2.6",
    "@types/lodash": "^4.14.168",
    "@types/mocha": "^8.2.0",
    "@types/node": "^14.14.22",
    "@typescript-eslint/eslint-plugin": "^4.14.0",
    "@typescript-eslint/parser": "^4.14.0",
    "better-docs": "^2.3.2",
    "chai": "^4.2.0",
    "clean-webpack-plugin": "^3.0.0",
    "css-loader": "^5.0.1",
    "eslint": "^7.18.0",
    "html-webpack-plugin": "^4.5.1",
    "jsdoc": "^3.6.6",
    "jsdoc-mermaid": "^1.0.0",
    "jsdom": "^16.4.0",
    "mocha": "^8.2.1",
    "nyc": "^15.1.0",
    "pre-commit": "^1.2.2",
    "sass": "^1.32.5",
    "sass-loader": "^10.1.1",
    "spec-xunit-file": "^0.0.1-3",
    "style-loader": "^2.0.0",
    "ts-loader": "^8.0.14",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3",
    "webpack": "^5.16.0",
    "webpack-cli": "^4.4.0",
    "webpack-dev-server": "^3.11.2"
  },
  "dependencies": {
    "express": "^4.17.1"
  }
}

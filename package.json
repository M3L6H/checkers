{
  "name": "checkers",
  "version": "1.0.0",
  "description": "The goal of this project is to implement a Checkers AI with the minimax algorithm and alpha-beta pruning.",
  "private": true,
  "main": "dist/server.js",
  "scripts": {
    "clean": "rimraf dist/*",
    "copy:views": "ts-node tools/copyViews",
    "copy:style": "ts-node tools/copyStyle",
    "copy-assets": "npm-run-all copy:*",
    "build:app": "tsc --build tsconfig.json -w > /dev/null 2>&1",
    "build:server": "tsc --build tsconfig.server.json -w > /dev/null 2>&1",
    "build": "npm-run-all build:* copy-assets",
    "rebuild": "npm-run-all clean build",
    "docs": "jsdoc -c jsdoc.json",
    "lint": "tsc --noEmit && eslint '**/*.ts'",
    "watch": "webpack --watch",
    "dev": "nodemon -x node .",
    "dev:views": "nodemon -w views -e '.ejs' -x npm run copy:views > /dev/null 2>&1",
    "dev:style": "nodemon -w style -e '.scss' -x npm run copy:style > /dev/null 2>&1",
    "start": "concurrently 'npm:build:app' 'npm:build:server' 'npm:dev' 'npm:dev:views' 'npm:dev:style'",
    "test": "nyc mocha",
    "docker:build": "docker build . -t checkers",
    "docker:run": "docker run --rm -p 80:8080 checkers"
  },
  "keywords": [],
  "author": "Michael Hollingworth",
  "license": "ISC",
  "pre-commit": [
    "lint",
    "test"
  ],
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/chai": "^4.2.14",
    "@types/express": "^4.17.11",
    "@types/jsdom": "^16.2.6",
    "@types/lodash": "^4.14.168",
    "@types/mocha": "^8.2.0",
    "@types/node": "^14.14.22",
    "@types/shelljs": "^0.8.8",
    "@typescript-eslint/eslint-plugin": "^4.14.0",
    "@typescript-eslint/parser": "^4.14.0",
    "better-docs": "^2.3.2",
    "chai": "^4.2.0",
    "clean-webpack-plugin": "^3.0.0",
    "concurrently": "^5.3.0",
    "connect-livereload": "^0.6.1",
    "css-loader": "^5.0.1",
    "eslint": "^7.18.0",
    "html-webpack-plugin": "^4.5.1",
    "jsdoc": "^3.6.6",
    "jsdoc-mermaid": "^1.0.0",
    "jsdom": "^16.4.0",
    "livereload": "^0.9.1",
    "mocha": "^8.2.1",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "pre-commit": "^1.2.2",
    "rimraf": "^3.0.2",
    "sass": "^1.32.5",
    "sass-loader": "^10.1.1",
    "shelljs": "^0.8.4",
    "spec-xunit-file": "^0.0.1-3",
    "style-loader": "^2.0.0",
    "ts-loader": "^8.0.14",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3",
    "webpack": "^5.16.0",
    "webpack-cli": "^4.4.0",
    "webpack-dev-server": "^3.11.2"
  },
  "dependencies": {
    "ejs": "^3.1.5",
    "express": "^4.17.1"
  }
}
